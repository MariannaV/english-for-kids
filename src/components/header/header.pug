mixin header-link(data)
    - const { setId, text } = data
    a.header-link(href="#" onclick=`history.pushState(${JSON.stringify({ setId })}, "${text}")`) #{text}

mixin header()
    header
        input(id="toggle-menu" type="checkbox")
        label(for="toggle-menu")
            svg(class="toggle-menu-label" width="20" height="26")
                line(x1="0" y1="2" x2="24" y2="2")
                line(x1="0" y1="10" x2="24" y2="10")
                line(x1="0" y1="18" x2="24" y2="18")
        nav.header-navigation
            +header-link({text: "Main Page"})
            +header-link({text: "Action (Set A)", setId: 'action-0'})
            +header-link({text: "Action (Set B)"})
            +header-link({text: "Action (Set C)"})
            +header-link({text: "Adjective"})
            +header-link({text: "Animal (Set A)"})
            +header-link({text: "Animal (Set A)"})
            +header-link({text: "Clothes"})
            +header-link({text: "Emotion"})
        .toggle-button-container
            label(for="toggle-button")
                input(id="toggle-button" type="checkbox")
                .toggle-button-block
                .toggle-button-handle
