mixin header-link(data)
    - const { setId, text: setName } = data
    a.header-link(onclick=`navigateToSet(event, ${JSON.stringify({setId, setName})})`) #{setName}

mixin header()
    header
        input(id="toggle-menu" type="checkbox")
        label(for="toggle-menu")
            svg(class="toggle-menu-label" width="20" height="26")
                line(x1="0" y1="2" x2="24" y2="2")
                line(x1="0" y1="10" x2="24" y2="10")
                line(x1="0" y1="18" x2="24" y2="18")
        nav.header-navigation
            +header-link({text: "Main Page"})
            +header-link({text: "Action (Set A)", setId: 'action-0'})
            +header-link({text: "Action (Set B)", setId: 'action-1'})
            +header-link({text: "Action (Set C)", setId: 'action-2'})
            +header-link({text: "Adjective", setId: 'adjective'})
            +header-link({text: "Animal (Set A)", setId: 'animal-0'})
            +header-link({text: "Animal (Set B)", setId: 'animal-1'})
            +header-link({text: "Clothes", setId: 'clothes-0'})
            +header-link({text: "Emotion", setId: 'emotion-0'})
        .toggle-button-container
            label(for="toggle-button")
                input(id="toggle-button" type="checkbox")
                .toggle-button-block.green(onclick='toggleThemes(this)' data-on='train' data-off='play')
                .toggle-button-handle
