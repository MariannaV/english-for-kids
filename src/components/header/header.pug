mixin header-link(data)
    - const { setId, text: setName, page } = data
    a.header-link(href=`${createRoute({page, setId})}`) #{setName}

mixin header()
    header
        input(id="toggle-menu" type="checkbox")
        label(for="toggle-menu")
            svg(class="toggle-menu-label" width="20" height="26")
                line(x1="0" y1="2" x2="24" y2="2")
                line(x1="0" y1="10" x2="24" y2="10")
                line(x1="0" y1="18" x2="24" y2="18")
        nav.header-navigation
            .header-navigation-wrapper
                +header-link({ text: "Main Page", setId: null, page: 'home'})
                +header-link({ text: "Action (Set A)", setId: 'action-0', page: 'sets' })
                +header-link({ text: "Action (Set B)", setId: 'action-1', page: 'sets' })
                +header-link({ text: "Action (Set C)", setId: 'action-2', page: 'sets' })
                +header-link({ text: "Adjective", setId: 'adjective-0' , page: 'sets'})
                +header-link({ text: "Animal (Set A)", setId: 'animal-0' , page: 'sets'})
                +header-link({ text: "Animal (Set B)", setId: 'animal-1' , page: 'sets'})
                +header-link({ text: "Clothes", setId: 'clothes-0' , page: 'sets'})
                +header-link({ text: "Emotion", setId: 'emotion-0', page: 'sets' })
        .toggle-button-container
            label(for="toggle-button")
                input(id="toggle-button" type="checkbox")
                .toggle-button-block.train(data-on='train' data-off='play')
                .toggle-button-handle
